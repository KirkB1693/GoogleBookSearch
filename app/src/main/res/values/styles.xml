<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:layout_marginLeft">@dimen/margin_standard</item>
        <item name="android:layout_marginRight">@dimen/margin_standard</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/search_padding</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textSize">@dimen/search_text_size</item>
    </style>


</resources>
